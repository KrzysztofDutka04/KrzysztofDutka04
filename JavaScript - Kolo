		var promien = prompt('podaj promien okregu: ');
		var pole = Math.PI * promien * promien;
		var obwod = 2 * Math.PI * promien;
		document.write('Podany promien wynosi: ' + promien + '<br>');
		document.write('Pole wynosi: ' + pole + '<br>') ;
		document.write('Obwod wynosi: ' + obwod + '<br>');
		
	</script>
